<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovelBD.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="5">
            <Label Text="Projeto MultiPlataforma" HorizontalTextAlignment="Center" TextColor="White" FontSize="36" FontAttributes="Bold"/>
        </Frame>
        <Image Source="logo" Margin="20"/>
        <StackLayout>
            <Button x:Name="btnCadastrar" Text="Cadastrar" BackgroundColor="Gray" FontAttributes="Bold" Clicked="btnCadastrar_Clicked"/>
            <Button x:Name="btnListar" Text="Listar" BackgroundColor="Gray" FontAttributes="Bold" Clicked="btnListar_Clicked"/>
            <Button x:Name="btnSair" Text="Sair" BackgroundColor="Red" FontAttributes="Bold" Clicked="btnSair_Clicked"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
